@model IEnumerable<MVCDemo2.Models.CountryList>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CountryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.English)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hebrew)
        </th>
        <th>
            Action
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CountryID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.English)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hebrew)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id = item.CountryID}) |
            @Html.ActionLink("Details", "Details", new {id = item.CountryID}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.CountryID})
        </td>
    </tr>
}

</table>
